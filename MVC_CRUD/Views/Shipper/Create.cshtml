
@{
    ViewBag.Title = "Create";
}

@model MVC_CRUD.Models.Shipper

<div class="row" style="margin-top:50px;">
   
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>KARGO EKLE</h3>
        </div>
        <div class="panel-body">
            <form method="post" action="Create">
                @Html.AntiForgeryToken(); 
                <label>Kargo Adı:</label>
                <input type="text" name="CompanyName" class="form-control" style="min-width:100%" />
                <br />
                <label>Kargo Adı:</label>
                <input type="text" name="Phone" class="form-control" style="min-width:100%" />
                <br />

                <input type="submit" name="name" value="Kargo Ekle" class="btn btn-primary" />
            </form>

        </div>
        <div class="panel-footer">
            <a href="/Shipper/Index" class="btn btn-info btn-block">Listeye Geri Dön</a>
        </div>
    </div>

</div>
