                        <th>Telefon</th>
                        <th>İşlemler</th>
                    </tr>

                </thead>

                <tbody>

                  @foreach (var item in Model)
                  {
                      <tr>
                          <td>@item.ShipperID</td>
                          <td>@item.CompanyName</td>
                          <td>@item.Phone</td>
                          <td>
                              @*TODO: İşlemler*@
                          </td>
                      </tr>
                  }

                </tbody>

            </table>

        </div>

    </div>

